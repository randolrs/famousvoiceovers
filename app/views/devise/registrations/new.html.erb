<div class="background-texture">

	<div class="background-transparency">

		<div class="user-credential-container">

			<h2>Sign up</h2>

			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

				<%= devise_error_messages! %>

				<%= f.check_box :is_voiceover_professional %>

				<%= f.email_field :email,  placeholder: "Email", autofocus: true %>

				<%= f.password_field :password,  placeholder: "Password", autocomplete: "off" %>

				<%= f.submit "Sign up", class:"user-credential-submit" %>

			<% end %>

			<%= render "devise/shared/links" %>

		</div>

	</div>

</div>
