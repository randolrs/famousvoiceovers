<div class="background-texture">

	<div class="background-transparency">

		<div class="user-credential-container">

			<h2>Log in</h2>

			<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

				<%= f.email_field :email, placeholder: "Email", autofocus: true %>

			    <%= f.password_field :password, placeholder: "Password", autocomplete: "off" %>

<!-- 			  <%# if devise_mapping.rememberable? -%>
			    <div><%# f.check_box :remember_me %> <%# f.label :remember_me %></div>
			  <%# end -%> -->

			  <div><%= f.submit "Log in", class:"user-credential-submit"  %></div>
			<% end %>

			<%= render "devise/shared/links" %>

		</div>

	</div>

</div>

