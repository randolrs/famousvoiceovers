<div class="content">

  <h2 class="content-header">Voiceover that Sounds like <%= image_tag @gig.celeb.image.url(:medium), :class => "celeb-img-small" %> <%= @gig.celeb.full_name %><span class="price">$300</span></h2>

  <h3 class="content-sub-header">Submitted <%= @gig.created_at.strftime("%b %d, %Y") %></h3>

  <h3 class="content-sub-header">Status: <span class="status-name"><%= @gig.status %></span></h3>

  <div class="content-section">
  
    <h3 class="content-sub-header">Script:</h3>

    <p class="script">"<%= @gig.script %>"</p>

  </div>

</div>
